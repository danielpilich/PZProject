@model IEnumerable<AfterlifeApp.Models.Category>
@using Microsoft.AspNetCore.Identity

@{
    ViewData["Title"] = "Categories";
}

<h1 style="text-align:center">Categories</h1>

@if (User.IsInRole("Administrator"))
{
    <p style="text-align:center">
        <a asp-action="Create"
           role="button" class="btn btn-outline-primary">
            Add New Category
        </a>
    </p>
}
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id"
                       role="button" class="btn btn-secondary btn-sm">
                        Details
                    </a>
                    @if (User.IsInRole("Administrator"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id"
                           role="button" class="btn btn-success btn-sm">
                            Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id"
                           role="button" class="btn btn-danger btn-sm">
                            Delete
                        </a>
                    }
                </td>
        </tr>
}
    </tbody>
</table>
